<div class="panel panel-default panel-col">
  <div class="panel-heading">{{'学员批量导入'|trans}}</div>
  <div class="panel-body">

    <div id="user-import" data-import-url="{{ path(data.excel_import_url, {id:targetObject.id}) }}" data-check-type="" data-finished-url='{{path(data.excel_validate_url,{id:targetObject.id})}}'>
      {% if errorInfo %}
        {% for errorInfo in errorInfo%}
         <div class="col-md-offset-2">{{errorInfo|raw}}</div><br>
        {% endfor %}
        <div class="col-md-offset-2"><a type="button" class="btn btn-primary" href="{{ path(data.excel_validate_url, {id:targetObject.id}) }}">{{'重新导入'|trans}}</a>
        </div>
      {% else %}
        {% if checkInfo %}
          {% for checkInfo in checkInfo%}
            <div class="col-md-offset-2">{{checkInfo}}</div><br>
          {% endfor %}
        {% endif %}
        <input type="hidden" value="{{allUserData}}" name="data">
        <input type="hidden" value="{{progress}}" name="progress" >
        <div class="col-md-offset-2">校验成功！一共包含 <b>{{userCount}}</b>个用户信息</div><br>
        <div class="col-md-offset-2"><button type="button" class="btn btn-primary" id="start-import-btn" data-target="#modal"  data-toggle="modal" data-url="{{ path('user_import_modal') }}" data-keyboard="false" data-backdrop="static">确定导入</button> <a type="button" class="btn btn-primary" href="{{ path(data.excel_validate_url, {id:targetObject.id}) }}">返回</a></div>
      {% endif %}
    </div>
  </div>
</div>